{
  "compilerOptions": {
    "target": "es2022",
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"],
      "@redux/*": ["src/frontend/redux/*"],
      "@shared/*": ["src/shared/*"],
    },
    "jsx": "react-jsx"
  },
  "include": ["src/**/*"],
  "files": [
    "src/index.d.ts"
  ]
}
